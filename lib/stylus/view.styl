.incito__view
    transform-origin 0 0
    overflow hidden
    margin 0
    padding 0
    display block
    background-repeat no-repeat
    
    &[data-gravity="center_horizontal"]
        margin-left auto
        margin-right auto

    &[data-gravity="left_horizontal"]
        margin-right auto

    &[data-gravity="right_horizontal"]
        margin-left auto