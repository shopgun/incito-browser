{
  "name": "incito-browser",
  "version": "1.1.3",
  "description": "",
  "main": "dist/incito.cjs.js",
  "browser": "dist/incito.js",
  "module": "dist/incito.es.js",
  "jsnext:main": "dist/incito.es.js",
  "bundlesize": [
    {
      "path": "./dist/incito.js",
      "maxSize": "100 kB"
    },
    {
      "path": "./dist/incito.min.js",
      "maxSize": "15 kB"
    },
    {
      "path": "./dist/incito.cjs.js",
      "maxSize": "15 kB"
    },
    {
      "path": "./dist/incito.es.js",
      "maxSize": "15 kB"
    }
  ],
  "scripts": {
    "test": "npm run test:lint && npm run test:ci && npm run test:size",
    "test:lint": "coffeelint lib/coffeescript __tests__",
    "test:ci": "jest --ci",
    "test:size": "bundlesize",
    "build:js": "rollup -c -m --environment NODE_ENV:production",
    "build:css": "stylus lib/stylus/incito.styl -o dist/incito.css --include-css -m",
    "build:css-min": "stylus lib/stylus/incito.styl -o dist/incito.min.css --include-css -m -c",
    "build": "run-p -l build:js build:css build:css-min",
    "dev:js": "rollup -c -m inline --no-treeshake --environment NODE_ENV:development --watch",
    "dev:css": "stylus lib/stylus/incito.styl -o dist/incito.css --include-css --sourcemap-inline --watch",
    "dev": "run-p -l dev:js dev:css serve",
    "serve": "serve --port 8001",
    "prepublishOnly": "npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "coffee",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(coffee)$": "<rootDir>/jest-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(coffee|js)"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopgun/incito-browser.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shopgun/incito-browser/issues"
  },
  "homepage": "https://github.com/shopgun/incito-browser#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "bundlesize": "^0.16.0",
    "coffeelint": "^2.1.0",
    "coffeescript": "^2.2.3",
    "is-color": "^0.2.0",
    "jest": "^22.4.2",
    "jquery": "^3.3.1",
    "jsdom": "^11.6.2",
    "json-schema-faker": "^0.5.0-rc13",
    "jsonschema": "^1.2.2",
    "microevent": "^1.0.0",
    "nib": "^1.1.2",
    "npm-run-all": "^4.1.2",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^4.0.0-beta.2",
    "rollup-plugin-coffee-script": "^2.0.0",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-globals": "^1.2.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-uglify": "^3.0.0",
    "serve": "^6.5.3",
    "stylus": "^0.54.5",
    "uglify-es": "^3.3.10",
    "valid-url": "^1.0.9"
  }
}
